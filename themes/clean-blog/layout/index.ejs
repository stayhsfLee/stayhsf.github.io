<!-- Page Header -->
<!-- Set your background image for this header in the theme's configuration: index_cover -->
<header class="intro-header" style="background-image: url('<%- theme.index_cover %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1><%- config.title %></h1>
                    <hr class="small">
                    <span class="subheading"><%- config.subtitle %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row" >
        <div class="col-lg-2 col-md-2" style="margin-left: 20px;">
                <div class="row">
                    <h3 style="margin-top: 30px;">Categories</h3>
                    <%- partial('_partial/index-categories-sidebar', {posts: site.posts}) %>
                </div>

            <div class="row">
                <h3 style="margin-top: 58px;">Tags</h3>
            </div>
            <div class="row">
                <% site.tags.each(function(item){ %>
                    <%- partial('_partial/index-tags-sidebar', {item: item}) %>
                <% }); %> 
            </div>
        </div>
        <div class="col-lg-7 col-lg-offset-2 col-md-9 col-md-offset-2">
            <% page.posts.each(function(item){ %>
                <%- partial('_partial/article-index', {item: item}) %>
            <% }); %>

            <%- partial('_partial/pagination') %>
        </div>
    </div>
</div>

